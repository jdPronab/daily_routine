<AlarmScreen>:
    Menu:
        size_hint: (1, .15)
        pos_hint: {'top': 1}

    StackLayout:
        canvas:
            Color:
                rgb: (1, 1, 0)
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'tb-lr'
        size_hint: (1, .85)
        padding: 20
        spacing: 25
        BoxLayout:
            canvas:
                Color:
                    rgb: (1, 0, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            orientation: 'vertical'
            size_hint: (1, .4)
            pos_hint: {'center_x': .5}
            Label:
                text: "Cureen Alarm"
                size_hint: (1, .2)
            Label:
                text: "Alarm Name"
                size_hint: (1, .3)
            Label:
                text: "Time"
                size_hint: (1, .2)
            Label:
                text: "Description"

        BoxLayout:
            canvas:
                Color:
                    rgb: (1, 0, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            orientation: 'vertical'
            size_hint: (1, .4)
            pos_hint: {'center_x': .5}
            Label:
                text: "Next Alarm"
                size_hint: (1, .2)
            Label:
                text: "Alarm Name"
                size_hint: (1, .3)
            Label:
                text: "Time"
                size_hint: (1, .2)
            Label:
                text: "Description"
