<NewAlarmScreen>:
    Menu:
        size_hint: (1, .15)
        pos_hint: {'top': 1}

    BoxLayout:
        canvas:
            Color:
                rgb: (1, 1, 0)
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint: (1, .85)
        padding: 20
        BoxLayout:
            canvas:
                Color:
                    rgb: (1, .4, 0)
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint: (.5, .5)
            pos_hint: {'center_x': .5, 'center_y': .7}
            orientation: 'vertical'
            Label:
                text: "[b]New Alarm[/b]"
                markup: True
            TextInput:
                text: "Name"
                markup: True
            TextInput:
                text: "Time"
                markup: True
            TextInput:
                text: "Description"
                markup: True
            Button:
                text: "Add"
